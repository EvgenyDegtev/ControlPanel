@model PagedList.PagedList<ControlPanel.Models.Group>
@using PagedList.Mvc

<h2>Index</h2>
<hr />

<div class="row">
	<div class="col-md-1">
		@Html.ActionLink("Добавить", "Create", new { }, new { @class = "btn btn-primary" })
	</div>
	<div class="col-md-11 form-inline">

		@using (Html.BeginForm("Index", "Groups"))
		{
			<div class="form-group">
				<label class="control-label">Группа: </label>
				<input type="text" name="searchString" value="@ViewBag.searchString" data-autocomplete-source='@Url.Action("AutocompleteSearch","Agents")' class="form-control" />
				<input type="submit" value="Поиск" class="btn btn-primary" />
			</div>
		}
	</div>
</div>
<br />

<table class="table table-hover">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.ToList().FirstOrDefault().Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ToList().FirstOrDefault().Description)
		</th>
		<th></th>
	</tr>

	@foreach (var group in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(model => group.Name)
			</td>
			<td>
				@Html.DisplayFor(model => group.Description)
			</td>
			<td>
				<a href=@Url.Action("Edit", new { id = group.Id })><i class="fa fa-edit"></i></a>
				|
				<a href=@Url.Action("Delete", new { id = group.Id })><i class="fa fa-close"></i></a>
			</td>
		</tr>
	}
</table>

Страница @(Model.PageCount< Model.PageNumber?0:Model.PageNumber) из @Model.PageCount
@Html.PagedListPager(Model, currentPage => Url.Action("Index", new { page = currentPage, searchString = ViewBag.searchString }))
