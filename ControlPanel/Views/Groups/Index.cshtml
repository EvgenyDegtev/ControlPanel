@model PagedList.PagedList<ControlPanel.Models.Group>
@using PagedList.Mvc

<h2>Index</h2>

<p>
	@Html.ActionLink("Добавить", "Create")
</p>

@using (Html.BeginForm("Index", "Groups"))
{
	<p>
		<strong>Группа:</strong> <input type="text" name="searchString" value="@ViewBag.searchString"/>
		<input type="submit" value="Поиск" />
	</p>
}

<table class="table table-hover">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.ToList().FirstOrDefault().Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ToList().FirstOrDefault().Description)
		</th>
		<th></th>
	</tr>

	@foreach (var group in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(model => group.Name)
			</td>
			<td>
				@Html.DisplayFor(model => group.Description)
			</td>
			<td>
				<a href=@Url.Action("Edit", new { id = group.Id })><i class="fa fa-edit"></i></a>
				|
				<a href=@Url.Action("Delete", new { id = group.Id })><i class="fa fa-close"></i></a>
			</td>
		</tr>
	}
</table>

Страница @(Model.PageCount< Model.PageNumber?0:Model.PageNumber) из @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
